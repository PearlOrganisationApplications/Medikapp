<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ll_verticle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ll_rr" parent="">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rl_shop_txt" parent="">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_2</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="rl_shop_logo" parent="">
        <item name="android:layout_marginTop">@dimen/dp_40</item>
        <item name="android:layout_marginBottom">@dimen/dp_30</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">@dimen/dp_80</item>
    </style>
</resources>