<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <include layout="@layout/main_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="match_parent"
            tools:context=".UI.PrescriptionActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Medicine Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"

                android:background="@drawable/rectangle_borderbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/medicine_nameET"
                    android:layout_width="0dp"
                    android:layout_weight="5.9"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/rectangle_borderbg"
                    android:layout_height="80dp"
                    android:hint="medicine name"/>
                <EditText
                    android:id="@+id/medicine_QuantityET"
                    android:layout_width="0dp"
                    android:layout_weight="4.0"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:background="@drawable/rectangle_borderbg"
                    android:layout_height="80dp"
                    android:hint="quantity"/>

                <EditText
                    android:id="@+id/medicine_discountET"
                    android:layout_width="0dp"
                    android:layout_weight="4.0"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:background="@drawable/rectangle_borderbg"
                    android:layout_height="80dp"
                    android:hint="discount"/>

                <EditText
                    android:id="@+id/medicine_priceET"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="4.0"
                    android:background="@drawable/rectangle_borderbg"
                    android:hint="Price"
                    android:padding="10dp"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/medicine_subtotalET"
                    android:layout_width="0dp"
                    android:layout_weight="4.0"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:background="@drawable/rectangle_borderbg"
                    android:layout_height="80dp"
                    android:hint="subtotal"/>

            </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:text="Dosage"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Frequency"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/dosageET"
                        android:layout_width="0dp"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/capsule"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_height="wrap_content"
                        android:hint="25mg"/>

                    <EditText
                        android:id="@+id/frequencyET"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:textAlignment="center"
                        android:drawableStart="@drawable/calendar"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Daily"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:text="Time Schedule"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Duration"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <AutoCompleteTextView
                        android:id="@+id/timeET"
                        android:layout_width="0dp"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/time"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_height="wrap_content"
                        android:hint="1:00"/>

                    <EditText
                        android:padding="8dp"
                        android:id="@+id/durationET"
                        android:layout_margin="4dp"
                        android:textAlignment="center"
                        android:drawableStart="@drawable/duration"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="6month"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_borderbg"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="7.1"
                    android:id="@+id/notes"
                    android:padding="8dp"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:hint="Notes"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/mic"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_mic_24"/>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/add_btn"
                android:layout_gravity="center"
                android:backgroundTint="@color/App_color"/>
            <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:background="@color/App_color"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Notes"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="SubTotal"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:id="@+id/medicinedatalist"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/rectangle_borderbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"/>
                    <EditText
                        android:padding="5dp"
                        android:layout_margin="2dp"
                        android:id="@+id/subtotalET"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0.00₹"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_height="wrap_content"
                        android:text="Discount"/>
                    <EditText
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:id="@+id/discountET"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0.00₹"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_height="wrap_content"
                        android:text="GST"/>
                    <EditText
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:id="@+id/gstET"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0.00₹"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_height="wrap_content"
                        android:text="Total"/>

                    <EditText
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:id="@+id/totalET"
                        android:textColor="@color/black"
                        android:background="@drawable/rectangle_borderbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0.00₹"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit_btn"
                android:layout_gravity="center"
                android:backgroundTint="@color/App_color"/>
        </LinearLayout>
    </ScrollView>


    </LinearLayout>
</layout>